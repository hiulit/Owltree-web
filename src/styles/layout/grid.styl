$gutter = 10px

.grid
    display: flex
    flex-direction: column
    flex-wrap: wrap
    margin-bottom: -($gutter)
    margin-left: -($gutter)
    margin-right: -($gutter)
    margin-top: -($gutter)

    +m-breakpoint(sm md landscape)
        flex-direction: row

    +m-breakpoint(md)
        flex-direction: row

.grid--big
    margin-bottom: -($gutter * 2)
    margin-left: -($gutter * 2)
    margin-right: -($gutter * 2)
    margin-top: -($gutter * 2)

    > .grid__item
        padding: $gutter * 2

.grid--extra-big
    margin-bottom: -($gutter * 4)
    margin-left: -($gutter * 4)
    margin-right: -($gutter * 4)
    margin-top: -($gutter * 4)

    > .grid__item
        padding: $gutter * 4

.grid__item
    flex: 1 1 auto
    padding: 10px

    +m-breakpoint(sm md)
        max-width: 100% !important
        width: 100% !important

    +m-breakpoint(sm md landscape)
        max-width: percentage((1 / 2)) !important
        width: percentage((1 / 2)) !important

    +m-breakpoint(md xmd)
        max-width: percentage((1 / 2)) !important
        width: percentage((1 / 2)) !important

.grid__item--1-2
    max-width: percentage((1 / 2))
    width: percentage((1 / 2))

.grid__item--1-3
    max-width: percentage((1 / 3))
    width: percentage((1 / 3))

.grid__item--2-3
    max-width: percentage((2 / 3))
    width: percentage((2 / 3))

.grid__item--1-4
    max-width: percentage((1 / 4))
    width: percentage((1 / 4))

.grid__item--1-5
    max-width: percentage((1 / 5))
    width: percentage((1 / 5))
