.grid
    display: flex
    flex-wrap: wrap
    margin-bottom: 20px
    margin-left: -10px
    margin-right: -10px
    margin-top: -10px
    +m-breakpoint(sm md)
        flex-direction: column

.grid--big
    margin-bottom: 40px
    margin-left: -20px
    margin-right: -20px
    margin-top: -20px

    .grid__item
        padding: 20px


.grid__item
    flex: 1 1 auto
    padding: 10px
    +m-breakpoint(sm md)
        max-width: 100% !important
        width: 100% !important

.grid__item-1-2
    max-width: percentage(1/2)
    width: percentage(1/2)

.grid__item-1-3
    max-width: percentage(1/3)
    width: percentage(1/3)

.grid__item-2-3
    max-width: percentage(2/3)
    width: percentage(2/3)

.grid__item-1-4
    max-width: percentage(1/4)
    width: percentage(1/4)
