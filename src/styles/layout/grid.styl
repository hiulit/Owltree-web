.grid
    display: flex
    flex-wrap: wrap
    margin-bottom: 20px
    margin-left: -10px
    margin-right: -10px
    margin-top: -10px
    +m-breakpoint(sm md)
        flex-direction: column
        
.grid--big
    margin-bottom: 40px
    margin-left: -20px
    margin-right: -20px
    margin-top: -20px
    
    .grid__item
        padding: 20px
            

.grid__item
    flex: 1 1 auto
    padding: 10px
    +m-breakpoint(sm md)
        max-width: 100% !important
        width: 100% !important

.grid__item-1-2
    max-width: 50%
    width: 50%

.grid__item-1-3
    max-width: 33.333333%
    width: 33.333333%

.grid__item-1-4
    max-width: 25%
    width: 25%
