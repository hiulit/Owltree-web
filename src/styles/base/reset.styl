html
    box-sizing: border-box

*,
*:before,
*:after
    box-sizing: inherit

body
    color: $primary-font-color
    font-family: "Raleway", Helvetica, Arial, sans-serif

ul,
li
    list-style-type: none
    margin: 0
    padding: 0

img
    height: auto
    max-width: 100%

a
    color: $primary-brand-color
    text-decoration: none

a
    &:hover
        text-decoration: underline

.amapola-link,
.mooshoes-link
    color: $primary-font-color
    display: inline-block
    font-weight: bold

    >img
        display: block
        margin-bottom: 10px
        margin-left: auto
        margin-right: auto
        margin-top: 10px
        width: 90%

    .product__text &,
    .section__text &
        margin-bottom: -1em

.mooshoes-link
    > img
        width: 50%

.intro-video
    m-responsive-video()
    margin: 0 auto
    margin-top: (($section-padding-bottom / 2))

    +m-breakpoint(md)
        max-width: 75%

.sitemap-list
    margin-bottom: 20px
    margin-left: auto
    margin-right: auto
    width: 250px

.sitemap-list__item
    list-style-type: disc
    margin-left: 40px

.text-center
    text-align: center
