.product
    text-align: center

.product--t-shirts
    .product__image
        img
            transform-origin: top center

.product--tote-bags
    .product__image
        img
            transform-origin: center center

.product--tote-bags
    .product__image
        img
            transform-origin: bottom center

.product--big
    .product__image
        margin: 0
        &:hover
            img
                transform: none

        img
            transition: none

.product__header
    margin-bottom: 20px
    text-align: center
    text-transform: uppercase

.product__text
    font-size: 13px
    line-height: 18px

.product__image
    overflow: hidden
    margin: 20px
    +m-breakpoint(md)
        &:hover
            img
                transform: scale(1.5)

        img
            transition: transform 0.25s ease-in-out 0.1s

.product__separator
    background-color: $primary-font-color
    border: none
    display: block
    height: 2px
    margin: 10px auto
    width: 85px

.product__separator--big
    margin: 40px auto

.product__model
    font-size: 14px
    font-weight: bold
    margin-bottom: 5px
    position: relative
    text-transform: uppercase

.product__message
    font-weight: bold
    &:before
    &:after
        font-size: 16px
    &:before
        content: open-quote
        margin-right: 2px
    &:after
        content: close-quote
        margin-left: 2px

.product__gender
    font-size: 12px
    text-transform: uppercase

.product__price
    font-size: 24px !important
    color: $primary-brand-color

// .product__sizes

.product__sizes__title
    display: inline-block

.product__sizes__list
    display: inline-block
    font-size: 0

.product__sizes__list__item
    font-size: 14px
    display: inline-block
    margin-left: 10px
    &:not(:last-child)
        &:after
            margin-left: 10px
            content: "-"

.product__buy-btn
    width: 100%

.product__tag
    margin: 20px

.product-tag__item
    font-size: 14px
    margin-bottom: 20px
    text-transform: uppercase


// .products-related

.products-related__link
    color: $primary-font-color
    display: block
    &:hover
        color: $primary-font-color
        text-decoration: none

// .products-related__list

.products-related__list__item
    text-align: center

.product-tag__icons-list
    m-clearfix()
    margin-bottom: 20px

.product-tag__icons-list__item
    float: left
    padding: 10px
    > img
        height: 50px
