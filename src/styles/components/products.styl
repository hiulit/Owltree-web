// .product

.product--t-shirts
    .product__image
        img
            transform-origin: top center

.product--tote-bags
    .product__image
        img
            transform-origin: bottom center

.product__image
    overflow: hidden
    margin: 20px
    &:hover
        img
            transform: scale(1.5)

    img
        transition: transform 0.25s ease-in-out

.product__name
    color: #363636
    font-size: 13px
    margin-bottom: 2px
    position: relative
    text-transform: uppercase
    &:before
        background-color: #363636
        content: ""
        display: block
        height: 2px
        margin-bottom: 10px
        margin-left: auto
        margin-right: auto
        width: 85px

.product__price
    font-size: 23px
    color: #6fd6f4
