.product
    text-align: center

.product--t-shirts
    .product__image
        img
            transform-origin: top center

.product--tote-bags
    .product__image
        img
            transform-origin: center center

.product--tote-bags
    .product__image
        img
            transform-origin: bottom center

.product--big
    margin-top: -40px

    .product__image
        &:hover
            img
                transform: none

        img
            transition: none

.product__header
    margin-bottom: 20px
    text-align: center
    text-transform: uppercase

.product__text
    font-size: 16px
    line-height: 25px

.product__image
    overflow: hidden
    margin: 20px
    &:hover
        img
            transform: scale(1.5)

    img
        transition: transform 0.25s ease-in-out 0.1s

.product__separator
    background-color: $primary-font-color
    border: none
    display: block
    height: 2px
    margin-bottom: 10px
    margin-left: auto
    margin-right: auto
    margin-top: 0
    width: 85px

.product__model
    font-size: 14px
    font-weight: bold
    margin-bottom: 5px
    position: relative
    text-transform: uppercase

.product__gender
    color: $primary-font-color
    font-size: 12px
    margin-bottom: 5px
    text-transform: uppercase

.product__price
    font-size: 23px
    color: $primary-brand-color

// .product__sizes

// .product__sizes__title

.product__sizes__list
    font-size: 0

.product__sizes__list__item
    font-size: 14px
    display: inline-block
    &:not(:last-child)
        margin-right: 10px

// .product__btn

// .product__btn--buy

.product__tag
    margin: 20px

    .product__price,
    .product__gender,
    .product__sizes,
    .product__button--buy
        margin-bottom: 20px

// .products-related

.products-related__link
    color: $primary-font-color
    display: block
    &:hover
        color: $primary-font-color
        text-decoration: none

// .products-related__list

.products-related__list__item
    text-align: center
