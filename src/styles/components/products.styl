.product
    position: relative
    text-align: center
    &.coming-soon
        .product__image
            position: relative
            &:hover
                img
                    transform: none
            &:before
                background-color: #fff
                content: ""
                height: 100%
                left: 0
                opacity: 0.5
                position: absolute
                top: 0
                width: @height
                z-index: 1
            &:after
                color: inherit
                content: "Coming soon..."
                font-size: 20px
                font-weight: bold
                left: 50%
                line-height: 0.8
                position: absolute
                text-shadow: 0px 1px 1px #fff
                top: 50%
                transform-origin: center left
                transform: translate(-50%, -50%)
                z-index: 2

.product--t-shirts,
.product--sweatshirts
    .product__image
        img
            transform-origin: top center

.product--tote-bags
    .product__image
        img
            transform-origin: center center

.product--tote-bags
    .product__image
        img
            transform-origin: bottom center

.product--big
    .product__image
        margin: 0
        &:hover
            img
                transform: none

        img
            transition: none

.product__header
    margin-bottom: 20px
    text-align: center
    text-transform: uppercase

.product__text
    font-size: 13px
    line-height: 18px

.product__label
    color: $primary-brand-color
    left: 5%
    position: absolute
    text-transform: uppercase
    top: 5%
    z-index: 3

.product__image
    overflow: hidden
    margin: 20px
    +m-breakpoint(md)
        &:hover
            img
                transform: scale(1.5)

        img
            transition: transform 0.25s ease-in-out 0.1s

    a
        display: block

.product__separator
    background-color: $primary-font-color
    border: none
    display: block
    height: 2px
    margin: 10px auto
    width: 85px

.product__separator--big
    margin: 40px auto

.product__model
    font-size: 14px
    font-weight: bold
    margin-bottom: 5px
    position: relative
    text-transform: uppercase

.product__message
    font-weight: bold
    &:before
    &:after
        font-size: 16px
    &:before
        content: open-quote
        margin-right: 2px
    &:after
        content: close-quote
        margin-left: 2px

.product__gender
    font-size: 12px
    text-transform: uppercase

.product__price
    font-size: 24px !important
    color: $primary-brand-color

.product__stock
    font-size: 14px
    color: #3c763d
    font-weight: bold
    &:before
        content: "- "
        color: $primary-font-color

.product__stock--no-stock
    color: #a94442

.product__stock--preorder
    color: $primary-font-color

// .product__sizes

.product__sizes__title
    display: inline-block

.product__sizes__list
    display: inline-block
    font-size: 0

.product__sizes__list__item
    font-size: 14px
    display: inline-block
    margin-left: 10px
    &:not(:last-child)
        &:after
            margin-left: 10px
            content: "-"

.product__buy-btn
    width: 100%

.product__tag
    margin: 20px

.product-tag__item
    font-size: 14px
    margin-bottom: 20px
    text-transform: uppercase

.product-tag__item__note
    font-size: 12px
    text-transform: initial
    position: relative

    .asterisk
        font-size: 30px
        position: absolute
        margin-top: -5px

    .text
        margin-left: 10px

// .products-related

.products-related__link
    color: $primary-font-color
    display: block
    &:hover
        color: $primary-font-color
        text-decoration: none

// .products-related__list

.products-related__list__item
    text-align: center

.product-tag__icons-list
    m-clearfix()
    margin-bottom: 20px

.product-tag__icons-list__item
    float: left
    padding: 10px
    > img
        height: 50px
