.btn,
button,
input[type="submit"]
    background-color: $primary-brand-color
    border: none
    color: #fff
    cursor: pointer
    display: inline-block
    margin: 0
    padding: 10px 20px
    text-align: center
    width: auto
    &:hover
        background-color: darken($primary-brand-color, 5)
    &.is-disabled,
    &[disabled]
        cursor: not-allowed
        opacity: 0.5
        &:hover
            background-color: $primary-brand-color

a.btn
    text-decoration: none
    &:hover
        text-decoration: none
