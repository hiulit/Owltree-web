.section
    height: 50vh
    padding-bottom: $section-padding-bottom
    padding-top: $section-padding-top
    position: relative
    +m-breakpoint(lg)
        height: 75vh
    &:first-child
        margin-top: $header-height

.section__title
    font-family: 'Miglia-Fur'
    font-size: 30px
    margin-bottom: 20px
    margin-top: 0
    text-transform: uppercase

.section__text
    color: $primary-font-color
    font-size: 16px
    line-height: 25px
    margin-left: auto
    margin-right: auto
    text-transform: uppercase

.section--1
    background-image: url("../assets/bg_img1.jpg")
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    margin-top: 0 !important
    padding-top: 50px

.section--2
    height: auto
    text-align: center

    .icon
        margin-bottom: 25px
        width: 130px

    .section__text
        margin-left: auto
        margin-right: auto
        max-width: 75%

.section--3
    background-image: url("../assets/bg_img2.jpg")
    background-repeat: no-repeat
    background-size: cover
    height: 50vh

.section--4
    height: auto
    text-align: center

    .section__text
        margin-left: auto
        margin-right: auto
        max-width: 75%

.section--5
    background-image: url("../assets/bg_img3.jpg")
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    position: relative

.section--product
    height: auto

.section--shadow
    padding: 0
    &:after
        background-color: #000
        content: ""
        display: block
        height: 100%
        left: 0
        opacity: 0.2
        position: absolute
        top: 0
        width: 100%
