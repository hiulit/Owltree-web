.section
    height: 50vh
    padding-bottom: 65px
    padding-top: 30px
    position: relative
    +m-breakpoint(lg)
        height: 75vh

.section__title
    font-family: 'Miglia Fur'
    font-size: 30px
    margin-bottom: 20px
    text-transform: uppercase

.section__text
    color: #363636
    font-size: 16px
    line-height: 25px
    margin-left: auto
    margin-right: auto
    text-transform: uppercase

small.section__text
    font-size: 12px
    line-height: 16px

.section--1
    background-image: url("../assets/bg_img1.jpg")
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    padding-top: 50px

.section--2
    height: auto
    text-align: center

    .icon
        margin-bottom: 25px
        width: 130px

    .section__text
        margin-left: auto
        margin-right: auto
        max-width: 75%

.section--3
    background-image: url("../assets/bg_img2.jpg")
    background-repeat: no-repeat
    background-size: cover

.section--4
    height: auto
    text-align: center

    .section__text
        margin-left: auto
        margin-right: auto
        max-width: 75%

.section--5
    background-image: url("../assets/bg_img3.jpg")
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    position: relative

.section--6
    height: auto
    padding-bottom: 30px

.section--product
    padding-top: 50px

.section--shadow
    &:after
        background-color: #000
        content: ""
        display: block
        height: 100%
        left: 0
        opacity: 0.2
        position: absolute
        top: 0
        width: 100%