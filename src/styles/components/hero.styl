.hero
    color: #fff
    font-family: 'Miglia-Fur', sans-serif
    left: 20px
    margin: 2em
    position: absolute
    right: 20px
    text-shadow: 0px 0px 10px #000
    top: 50%
    transform: translateY(-50%)

.hero__title
    font-size: 55px
    line-height: 51px
    margin-bottom: 20px

.hero__subtitle
    font-size: 20px
    line-height: 1.4
    text-transform: uppercase
    +m-breakpoint(md)
        max-width: 40%

.hero__blockquote
    font-size: 20px
    margin: 0
    text-transform: uppercase
    +m-breakpoint(md)
        max-width: 40%
    +m-breakpoint(lg)
        font-size: 30px

.hero__blockquote__text
    margin-top: 0

.hero__blockquote__footer
    font-size: 20px

