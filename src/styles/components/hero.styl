.hero
    color: #fff
    left: 20px
    position: absolute
    text-shadow: 0px 0px 10px #000
    top: 50%
    transform: translateY(-50%)

.hero__title
    font-family: 'Miglia Fur'
    font-size: 55px
    line-height: 51px
    margin-bottom: 20px

.hero__subtitle
    text-transform: uppercase
    max-width: 40%
    line-height: 1.4

.hero__blockquote
    text-transform: uppercase
    max-width: 40%
    font-size: 30px
    
.hero__blockquote__footer
    font-size: 20px
    
